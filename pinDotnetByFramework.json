{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "description": "Pin Microsoft.NET.Test.SDK for pre-NET8 compatibility",
            "matchDatasources": [
                "nuget"
            ],
            "matchFileNames": [
                "**/Directory.Packages.Net6.props"
            ],
            "matchPackageNames": [
                "Microsoft.NET.Test.Sdk"
            ],
            "allowedVersions": "< 18.0.0"
        }
    ]
}